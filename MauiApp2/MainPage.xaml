            Source="dotnet_bot.png" 
            Background="Transparent"
            />
    
            <Entry Placeholder="Enter task"
       ClearButtonVisibility="WhileEditing"
                Keyboard="Numeric"
                   Grid.Row="1"
 Grid.ColumnSpan="2"
                   Style="{StaticResource NoBorderStyle}"
